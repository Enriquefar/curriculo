algoritmo "Número par"
// Disciplina  : [Lógica de Programação]
// Professor   : [Bruna Sozzo]
// Autor(a)    : Enrique Fernandes Alves Rodrigues
var

i:inteiro
n:inteiro

inicio

escreva("Digite um número inteiro: ")
leia(n)
escreval("")
i := 0
    enquanto (i <= n) faca
        se (i % 2 = 0) entao
        escreval (i , ".")
    fimse
i := i + 1
fimenquanto
fimalgoritmo